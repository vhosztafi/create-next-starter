{
  "name": "@solutioniser/create-next-starter",
  "version": "0.1.8",
  "description": "CLI tool to create Next.js starter applications with optional authentication providers and UI libraries",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "create-next-starter": "dist/index.js"
  },
  "keywords": [
    "nextjs",
    "starter",
    "template",
    "cli",
    "authentication",
    "authjs",
    "clerk",
    "auth0",
    "supabase",
    "storybook",
    "typescript",
    "tailwind",
    "ui",
    "shadcn",
    "heroui",
    "flowbite",
    "daisyui",
    "tremor"
  ],
  "author": "Solutioniser Ltd <vilmos@solutioniser.ltd>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vhosztafi/next-starter-templates.git",
    "directory": "packages/create-next-starter"
  },
  "homepage": "https://github.com/vhosztafi/next-starter-templates#readme",
  "bugs": {
    "url": "https://github.com/vhosztafi/next-starter-templates/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "format:fix": "prettier --write .",
    "format:validate": "prettier --check .",
    "version:patch": "npm version patch && git push origin main --tags",
    "version:minor": "npm version minor && git push origin main --tags",
    "version:major": "npm version major && git push origin main --tags",
    "version:alpha": "npm version prerelease --preid=alpha && git push origin main --tags",
    "version:beta": "npm version prerelease --preid=beta && git push origin main --tags",
    "version:rc": "npm version prerelease --preid=rc && git push origin main --tags"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2",
    "ora": "^9.0.0",
    "prompts": "^2.4.2",
    "tar": "^7.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ]
}
